@model IEnumerable<NaturalDisasterDatabaseWebsite.Models.DisasterStyleViewModel>
@*轮播区域S*@
<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="3000">
    @*轮播指标S*@
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        @for (var i = 1; i <= 7; i++)
        {
            <li data-target="#myCarousel" data-slide-to="@i"></li>
        }
    </ol>
    @*轮播指标E*@
    @*轮播项目S*@
    @*轮播顺序：气象、海洋、洪水、地质、地震、农作物生物、森林生物、森林火灾*@
    <div class="carousel-inner" role="listbox">
        @foreach (var lunbo1 in ViewBag.lunbo1)
        {
            <div class="item active">
                <img src="~/upfiles/@lunbo1.imgSrc" alt="@lunbo1.natrualDisasterName" class="img-responsive" />
                <div class="carousel-caption" role="option">
                    <p>
                        <strong>@lunbo1.natrualDisasterName</strong>@lunbo1.natrualDisasterDefinition
                        @*<br />*@
                    </p>
                    <a class="btn btn-default" href="@lunbo1.href">
                        了解更多
                    </a>
                </div>
            </div>
        }
        @foreach (var item in Model)
        {
            <div class="item">
                <img src="~/upfiles/@Html.DisplayFor(model=>item.imgSrc)" alt="@Html.DisplayFor(model=>item.natrualDisasterName)" class="img-responsive" />
                <div class="carousel-caption" role="option">
                    <p>
                        <strong>@Html.DisplayFor(model => item.natrualDisasterName)</strong>@Html.DisplayFor(model => item.natrualDisasterDefinition)
                    </p>
                    <a class="btn btn-default" href="@Html.DisplayFor(model => item.href)">
                        了解更多
                    </a>
                </div>
            </div>
        }
        @*轮播项目E*@
    </div>
    @*轮播控制器S*@
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
    @*轮播控制器E*@
</div>
@*轮播区域E*@